<table class="table">
	<tr><%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %></tr>

	<tr>
		<th>name</th>
		<th><%= user.name %></th>
	</tr>

	<tr>
		<th>introduction</th>
		<th><%= user.introduction %></th>
	</tr>
</table>

<div class="row">
	<% if user.id == current_user.id %>
		<%= link_to 'ユーザー編集', edit_user_path(@user) %>
	<% end %>
</div>